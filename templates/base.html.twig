      <script>
        $('#store-checkout').click(function() {

          var total = 0;

          var cname = $('#sale_name').val();
          var cphone = $('#sale_phone').val();
          var cmail = $('#sale_mail').val();

          if (cname != "" && cmail != "") {

          $('#loader').removeClass('uk-hidden');

            $.ajax({
              type: 'post',
              url: '{{ path('store-resume-sale') }}',
              dataType: "json",
              data: {
                "total": total,
                "cname": cname,
                "cphone": cphone,
                "cmail": cmail
              },
              async: true,
              success: function(data) {

                $('#loader').addClass('uk-hidden');

                $('#totaltopay').text(data.total);

                UIkit.notification({message: 'Orden generada', status: 'primary', pos: 'bottom-right', timeout: 3000});

                UIkit.modal('#checkout-modal').show();

              },
              error: function(data){
                $('#loader').addClass('uk-hidden');
                UIkit.notification({message: 'Error al generar la orden de compra', status: 'danger', pos: 'top-center', timeout: 3000});
              }
            });
          } else {
            UIkit.notification({message: 'Sus datos son necesarios', status: 'danger', pos: 'bottom-right', timeout: 3000});
          }

        });
